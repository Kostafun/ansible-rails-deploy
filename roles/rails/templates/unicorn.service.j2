[Unit]
Description=Unicorn application server
After=network.target

[Service]
Restart=always
RestartSec=10
Type=forking
User={{ user }}
ExecStart={{ gem_bins_path }}/bundle exec "unicorn_rails -D -c {{ rails_current_path }}/config/unicorn.rb -E production"
SyslogIdentifier=unicorn-{{ app_name }}
PIDFile={{ rails_path_app }}/shared/pids/unicorn.pid
WorkingDirectory={{ rails_current_path }}
KillMode=mixed
KillSignal=SIGQUIT

#ExecReload=/bin/kill -s HUP $MAINPID
#ExecReload=/bin/kill -s USR2 $MAINPID
#ExecStop=/bin/kill -s QUIT $MAINPID

[Install]
WantedBy=multi-user.target
